<h1>Listing restaurants</h1>

<%= link_to 'New restaurant', new_restaurant_path %>
<p>
<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>

  <% @restaurants.each do |restaurant| %>
    <tr>
      <td><%= link_to restaurant.name, restaurant_path(restaurant) %></td>
      <td><%= restaurant.address %></td>
    </tr>
  <% end %>
</table>